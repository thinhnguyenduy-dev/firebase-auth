{
  "name": "firebase-auth-demo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm --filter @firebase-auth-demo/frontend dev\" \"pnpm --filter @firebase-auth-demo/backend dev\"",
    "dev:frontend": "pnpm --filter @firebase-auth-demo/frontend dev",
    "dev:backend": "pnpm --filter @firebase-auth-demo/backend dev",
    "build": "pnpm -r build",
    "build:frontend": "pnpm --filter @firebase-auth-demo/frontend build",
    "build:backend": "pnpm --filter @firebase-auth-demo/backend build",
    "test": "pnpm -r test"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
