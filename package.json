{
  "name": "firebase-auth-demo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm --filter @firebase-auth-demo/client dev\" \"pnpm --filter @firebase-auth-demo/server dev\"",
    "dev:frontend": "pnpm --filter @firebase-auth-demo/client dev",
    "dev:backend": "pnpm --filter @firebase-auth-demo/server dev",
    "build": "pnpm -r build",
    "build:frontend": "pnpm --filter @firebase-auth-demo/client build",
    "build:backend": "pnpm --filter @firebase-auth-demo/server build",
    "test": "pnpm -r test"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
